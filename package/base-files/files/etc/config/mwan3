
config globals 'globals'
	option mmx_mask '0x3F00'
	option local_source 'lan'

config interface 'wan'
	option enabled '1'
	list track_ip '8.8.4.4'
	list track_ip '8.8.8.8'
	list track_ip '208.67.222.222'
	list track_ip '208.67.220.220'
	option family 'ipv4'
	option reliability '2'
	option count '1'
	option timeout '2'
	option failure_latency '1000'
	option recovery_latency '500'
	option failure_loss '20'
	option recovery_loss '5'
	option interval '5'
	option down '3'
	option up '8'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option proto 'all'
	option sticky '0'
	option use_policy 'ALL'

config interface 'MOBILE'
	option enabled '1'
	option initial_state 'offline'
	option family 'ipv4'
	list track_ip '8.8.8.8'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option check_quality '0'
	option timeout '2'
	option interval '5'
	option failure_interval '5'
	option recovery_interval '5'
	option down '3'
	option up '3'
	option flush_conntrack 'never'

config member 'wan_m'
	option interface 'wan'
	option metric '1'
	option weight '1'

config member 'MOBILE_m'
	option interface 'MOBILE'
	option metric '3'
	option weight '3'

config interface 'wwan'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option check_quality '0'
	option timeout '2'
	option interval '5'
	option failure_interval '5'
	option recovery_interval '5'
	option down '3'
	option up '3'
	option flush_conntrack 'never'
	list track_ip '8.8.8.8'

config member 'wwan_m'
	option interface 'wwan'
	option metric '2'
	option weight '2'

config policy 'wan_wwan'
	list use_member 'wan_m'
	list use_member 'wwan_m'
	option last_resort 'unreachable'

config policy 'ALL'
	list use_member 'wan_m'
	list use_member 'MOBILE_m'
	list use_member 'wwan_m'
	option last_resort 'unreachable'

config policy '4G_only'
	list use_member 'MOBILE_m'
	option last_resort 'unreachable'

config policy 'Wifi_only'
	list use_member 'wwan_m'
	option last_resort 'unreachable'

config policy 'wan_only'
	list use_member 'wan_m'
	option last_resort 'unreachable'

